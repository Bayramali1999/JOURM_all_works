<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.EditProfileActivity">


    <Toolbar
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_back_btn"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:padding="16dp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Profilni o'zgartirish"
            android:textSize="16sp" />
    </Toolbar>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/edit_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/img"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_toolbar" />


    <EditText
        android:id="@+id/etid_pf_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@drawable/et_input_style"
        android:hint="Name"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_color"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_image" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@drawable/btn_style"
        android:text="Change"
        app:layout_constraintTop_toBottomOf="@id/etid_pf_et" />
</androidx.constraintlayout.widget.ConstraintLayout>